<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12sp"
    app:cardCornerRadius="12sp"
    android:padding="4sp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FB99BB">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/patientImg"
                android:layout_width="80sp"
                android:layout_height="70sp"

                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BedNo: "
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textbed"
                android:textSize="17sp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textage"
                android:textSize="17sp"
                android:textColor="@color/black"
                />
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM:"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBP"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="195sp"
                android:layout_height="wrap_content"
                android:minHeight="30sp"
                android:minWidth="300sp"
                android:max="180"
                android:indeterminate="false"
                android:progress="1" />
            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/textBP"
                android:layout_marginLeft="8sp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp(Celcius):"
                android:textSize="12sp"/>
            <ProgressBar
                android:id="@+id/progressTemp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="260sp"
                android:layout_height="wrap_content"
                android:minHeight="30sp"
                android:minWidth="300sp"
                android:max="105"
                android:indeterminate="false"
                android:progress="1" />
            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:id="@+id/textTemp"
                android:textStyle="bold"
                android:layout_marginLeft="7sp"/>

        </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPO2: "
                android:textSize="20sp"/>
            <ProgressBar
                android:id="@+id/progressSPO2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="270sp"
                android:layout_height="wrap_content"
                android:minHeight="30sp"
                android:minWidth="300sp"
                android:max="100"
                android:indeterminate="false"
                android:progress="1" />
                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/textSpo2"
                    android:layout_marginLeft="5sp"/>

        </LinearLayout>
      <LinearLayout
          android:layout_width="60sp"
          android:layout_height="45sp">


         <androidx.appcompat.widget.AppCompatButton
             android:layout_width="75sp"
             android:layout_height="wrap_content"
             android:text="more"
             android:id="@+id/expandBtn"/>
      </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:visibility="gone"
         android:id="@+id/hidden_view">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Name: "
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/showName"
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Gender: "
             android:textSize="17sp"
             android:textColor="@color/black"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/showGender"
             android:textSize="17sp"
             android:textColor="@color/black"
             />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Blood Group:  "
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/showBloodGroup"
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Covid Status:  "
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/showCovidStatus"
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Previous Illness: "
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/showPreviousIllness"
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Phone: "
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/showPhone"
                 android:textSize="17sp"
                 android:textColor="@color/black"
                 />
         </LinearLayout>
     </LinearLayout>

     </LinearLayout>



</androidx.cardview.widget.CardView>